{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": ["es6", "dom"],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/ng-daterangepicker/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles",
    "dist",
    "src/main.aot.ts"
  ],
  "files": [
    "index.ts",
    "ng-daterangepicker.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false
  }
}
